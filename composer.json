{
    "name": "jerome/fetch-php",
    "description": "The JavaScript fetch API for PHP.",
    "version": "3.2.3",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Jerome Thayananthajothy",
            "email": "tjthavarshan@gmail.com"
        }
    ],
    "homepage": "https://fetch-php.thavarshan.com",
    "support": {
        "issues": "https://github.com/Thavarshan/fetch-php/issues",
        "source": "https://github.com/Thavarshan/fetch-php"
    },
    "autoload": {
        "psr-4": {
            "Fetch\\": "src/Fetch/"
        },
        "files": [
            "src/Fetch/Support/helpers.php"
        ]
    },
    "require": {
        "php": "^8.2",
        "guzzlehttp/guzzle": "^7.9",
        "guzzlehttp/psr7": "^2.7",
        "jerome/matrix": "^3.3",
        "psr/http-message": "^1.0|^2.0",
        "psr/log": "^1.0|^2.0|^3.0",
        "react/event-loop": "^1.5",
        "react/promise": "^3.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.64",
        "laravel/pint": "^1.21",
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^1.11.5",
        "phpunit/phpunit": "^11.5",
        "squizlabs/php_codesniffer": "^3.7 || ^4.0",
        "symfony/var-dumper": "^6.0|^7.2",
        "tightenco/duster": "^3.2"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": "duster lint src",
        "fix": "duster fix src",
        "test": "phpunit --do-not-fail-on-skipped",
        "test:unit": "phpunit --do-not-fail-on-skipped tests/Unit",
        "test:integration": "phpunit --do-not-fail-on-skipped tests/Integration",
        "test:coverage": "XDEBUG_MODE=coverage phpunit --do-not-fail-on-skipped --coverage-html=coverage --coverage-text",
        "analyse": "phpstan analyse",
        "check": [
            "@analyse",
            "@lint",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "php-http/discovery": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "pestphp/pest-plugin": true
        },
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
