parameters:
    paths:
        - src

    level: 6

    excludePaths:
        - tests/Mocks

    treatPhpDocTypesAsCertain: false

    reportUnmatchedIgnoredErrors: false

    ignoreErrors:
        # Promise generics: allow missing generic in signatures; documented by PHPDoc where relevant
        - '#return type with generic interface React\\Promise\\PromiseInterface does not specify its types#'
        - '#has parameter .* with generic interface React\\Promise\\PromiseInterface#'
        # Factories intentionally use late static binding
        - '#Unsafe usage of new static\(\)#'
