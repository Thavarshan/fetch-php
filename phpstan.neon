parameters:
    paths:
        - src

    level: 6

    excludePaths:
        - tests/Mocks

    treatPhpDocTypesAsCertain: false

    ignoreErrors:
        # Allow global helper functions
        - '#Function .* not found\.#'
        # Generic promise interfaces - React Promise doesn't support generics in PHP 8.2
        - '#generic interface React\\Promise\\PromiseInterface but does not specify its types#'
        # Mixed type casting - will be addressed in next major version
        - '#Cannot cast mixed to (int|string)#'
        - '#Cannot access offset .* on mixed#'
        - '#Parameter .* expects .*, mixed given#'
        # Static constructor pattern used intentionally
        - '#Unsafe usage of new static\(\)#'
        # Helper function return types (backwards compatibility)
        - '#Function .* should return .* but returns#'
        # Array access interface without generics (PHP 8.2 compatibility)
        - '#Interface .* extends generic interface ArrayAccess but does not specify its types#'
        # PHPDoc parsing issue with complex return types
        - '#PHPDoc tag @return has invalid value#'
        # Iterable value types - will be addressed in next major version
        - '#has no value type specified in iterable type array#'
        - '#return type has no value type specified in iterable type array#'
        - '#parameter .* with no value type specified in iterable type array#'
        # URI handling type issues
        - '#Method .* should return string but returns string\|null#'
        - '#Parameter .* expects string, array\|float\|int\|string\|false given#'
        # Method definition issues - async methods
        - '#Call to an undefined method .*::sendAsync\(\)#'
